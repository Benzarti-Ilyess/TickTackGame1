<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="#f9f9"></solid>
            <corners android:radius="150dp"></corners>
            <stroke android:color="#ffffff" android:width="5dp"></stroke>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"></padding>

        </shape>



    </item>


    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!--<solid android:color="#ef4444"></solid>-->
            <gradient
                android:startColor="#ef4fffff"
                android:centerColor="#e7e7"
                android:endColor="#cfc"
                android:angle="90" />
            <corners android:radius="150dp"></corners>
            <stroke android:color="#ffffff" android:width="5dp"></stroke>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"></padding>




        </shape>



    </item>
</selector>